@model BLitWebApp.Models.CarModel

@{
    ViewData["Title"] = "CreateCarModel";
}

<h2>Create Car Model</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateCarModel">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Manufacturer" class="control-label"></label>
                <select asp-for="ManufacturerID" class="form-control" asp-items="ViewBag.ManufacturerID"></select>
                <a asp-action="CreateManufacturer">Add New Manufacturer</a>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

